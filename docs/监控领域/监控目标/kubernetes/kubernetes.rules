groups:
  - name: kubernetes
    rules:
      - alert: kubernetes-pod-资源-内存
        expr: sum(container_memory_rss{id!="/",container!~"POD|ilogtail|logtail|"}) by (namespace, pod,container) / sum(container_spec_memory_limit_bytes{id!="/",container!~"POD|ilogtail|logtail|"}) by (namespace, pod,container) > 0.8
        for: 1m
        labels:
          status: 非常严重
        annotations:
          summary: "超标"
          description: "kubernetes-pod-资源-内存超标 ({{$labels.namespace}}/{{$labels.pod}}--{{$labels.container}}) : {{$value}}"
      - alert: kubernetes-deployment-副本数
        expr: sum(kube_deployment_status_replicas_available) by (namespace, deployment) <1
        for: 1m
        labels:
          status: 非常严重
        annotations:
          summary: "过低"
          description: "kubernetes-deployment-副本数为零 ({{$labels.namespace}}/{{$labels.deployment}}"